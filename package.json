{
  "name": "minor-project-funda",
  "version": "1.0.0",
  "private": true,
  "description": "Augmented Reality app to find houses available near you",
  "scripts": {
    "lint": "stylelint src/**/*.css & xo",
    "build-js": "browserify src/browser.js -p bundle-collapser/plugin | esmangle > public/main.js",
    "watch-js": "watchify src/browser.js --debug -o public/main.js -v",
    "build-css": "postcss src/*.css --use postcss-cssnext | csso -o public/style.css",
    "watch-css": "nodemon -e css -w src -x \"npm run build-css\"",
    "dev": "nodemon server.js --watch server.js --watch lib & open http://localhost:3000 & npm run watch-css & npm run watch-js",
    "build": "npm run lint && npm run build-js && npm run build-css",
    "start": "npm run build && node server.js"
  },
  "repository": "rijkvanzanten/minor-project-funda",
  "author": "Rijk van Zanten <rijkvanzanten@me.com> (rijks.website)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rijkvanzanten/minor-project-funda/issues"
  },
  "homepage": "https://github.com/rijkvanzanten/minor-project-funda#readme",
  "dependencies": {
    "concat-stream": "^1.6.0",
    "dotenv": "^4.0.0",
    "ejs": "^2.5.6",
    "express": "^4.15.1"
  },
  "devDependencies": {
    "browserify": "^14.1.0",
    "bundle-collapser": "^1.2.1",
    "csso-cli": "^1.0.0",
    "esmangle": "^1.0.1",
    "nodemon": "^1.11.0",
    "postcss": "^5.2.16",
    "postcss-cli": "^3.0.0",
    "postcss-cssnext": "^2.10.0",
    "stylelint": "^7.9.0",
    "stylelint-config-standard": "^16.0.0",
    "xo": "^0.18.0"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "xo": {
    "space": true,
    "esnext": true,
    "ignore": [
      "public/script.js"
    ]
  }
}
